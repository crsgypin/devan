
<%= render :partial=>"customers/index_heading",:locals=>{:selected=>2, :btn=>"" } %>

<div class="content-box">
	<div class="content-inner">

		<div class="customer-delivery-plan-days">

			<div class="page-box">
				<%= paginate @customers %>								
			</div>

			<table class="table table-bordered">
				<thead>
					<tr>
						<th width="5%"></th>
						<th width="10%"> 編號 </th>
						<th width="15%"> 名字 </th>

						<% weekday_list.each do |wday| %>
							<th> <%= link_to t("week_day.#{wday}"),delivery_plan_days_customers_path(:sort=>wday.downcase), :class=>"btn btn-success btn-xs" %> </th>
						<% end %>
					</tr>
				</thead>

				<tbody>
					<% @customers.each_with_index do |customer,index| %>
						<% setup_customer(customer) %>
					<tr>
						<td> <%= index+1 %> </td>
						<td> <%= customer.code %> </td>
						<td> <%= customer.name %> </td>

						<% weekday_list.each do |wday| %>
							<td> 
								<% if customer.customer_delivery_day[wday.downcase] %>
									<div class="label label-primary label-xs"> √ </div>	
								<% else %>

								<% end %>
							</td>
						<% end %>

						<td> <%= link_to "基本資料",customer_path(customer), :class=>"btn btn-warning btn-xs" %> </td>
					</tr>
					<% end %>

				</tbody>
			</table>
		</div>

	</div> <%# content-inner %>
</div> <%# content-box %>



