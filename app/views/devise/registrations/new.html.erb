<div class="menu-box">
  <div class="menu-inner-1">
    <%= link_to "登入", "/users/sign_in" %>
    <%= link_to "註冊", "/users/sign_up", :class=>"selected"%>
  </div>
</div>

<div class="content-box">
  <div class="content-inner">
    
    <div class="devise-user">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email, :class=>"v-label" %>
          <%= f.email_field :email, autofocus: true, :required=>true %>
        </div>

        <div class="field">
          <%= f.label :password, "密碼(最少八個字元)",:class=>"v-label" %>
          <%= f.password_field :password, 
                                autocomplete: "off", 
                                :required=>true %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "密碼確認",:class=>"v-label" %>
          <%= f.password_field :password_confirmation, 
                                autocomplete: "off", 
                                :required=>true %>
        </div>

        <div class="actions">
          <%= f.submit "註冊", :class=>"btn btn-primary" %>
        </div>
      <% end %>
      
      <div class="actions">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</div>
