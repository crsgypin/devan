<%# daily_form, form2_values %>

<div class="title">
	<h1> 今日表單 </h1>
	<div class="edit"> 
		<%= link_to "編寫表單",edit_form2_daily_form_path(daily_form), :class=>"btn btn-warning edit-button" %> 
	</div>		
</div>

<table class="table table-striped form2-value-show-table">
	<thead>		
		<tr>
			<td>			 </td>
			<td> 客戶   </td>
			<td> 廠商   </td>
			<td> 送貨員 </td>
			<td> 現金   </td>
			<td> 月收   </td>
			<td> 未收   </td>
			<td> 特別月收   </td>
			<td>	</td>
			<td> 備註   </td>
		</tr>
	</thead>
	<tbody>		
	<% form2_values.each_with_index do |form2_value,index| %>
		<tr class="form2-value-<%=form2_value.form_value_index%>">
			<td> <%= index +1 %> </td>
			<td> <%= form2_value.customer.try(:name) %> </td>
			<td> <%= form2_value.manufacturer.try(:name) %> </td>
			<td> <%= form2_value.delivery_person.try(:name) %> </td>	
			<td> <%= form2_value.key1 %> </td>
			<td> <%= form2_value.key2 %> </td>
			<td> <%= form2_value.key3 %> </td>
			<td> <%= form2_value.key4 %> </td>
			<td> <%= form2_value.key5 %> </td>
			<td> <%= form2_value.key6 %> </td>
			<td> <%= form2_value.note %> </td>
		</tr>
	<% end %>
	</tbody>
</table>




