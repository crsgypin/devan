
<div class="home">
	
	<div class="title">	
		<h1>品冠貨運公司</h1> 	
	</div>
	<% if current_user %>
		<div class="user">  
			<h3> <%= "哈囉! #{current_user.display_name}" %> </h3>
			<p> 
				<%= link_to "個人資料","/users/edit_profile", :class=>"btn btn-info btn-xs" %>
				<%= link_to "登出", "/users/sign_out",:method=>:delete, :class=>"btn btn-warning btn-xs" %> 
			</p>
  	</div>
		
		<% if current_user.member?%>
			<div class="box"> 
				<%= link_to "客戶", delivery_routes_customers_path %>
			</div>
			<div class="box"> 
				<%= link_to "表單", daily_forms_path %>	
			</div>

			<% if current_user.editor? %>
				<div class="box"> <%= link_to "路線規劃", customer_routes_path %> </div>
				<div class="box"> <%= link_to "設定",admin_customers_path %> </div>
			<% end %>

			
		<% end %>
	<% else %>
		<div class="box"> <%= link_to "登入", new_user_session_path %> </div>
		<div class="box"> <%= link_to "註冊", new_user_registration_path %> </div>
	<% end %>

</div>




