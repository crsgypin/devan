<div class="menu-box">
	<div class="menu-inner-1">
		<%= link_to "客戶", admin_customers_path,:class=>"" %>
		<%= link_to "送貨員",admin_delivery_people_path,:class=>"selected" %>
		<%= link_to "廠商", admin_manufacturers_path,:class=>"" %>
	</div>
</div>

<div class="content-box">
	<div class="content-inner">
		
		<div class="admin-delivery-person">
				
			<%= form_for @delivery_person, :url=>admin_delivery_people_path do |form| %>
				<div class="info-box">
					<%= link_to "取消並回清單", admin_delivery_people_path, :class=>"btn btn-default back"%>
					<%= form.submit "儲存並回清單", :class=>"btn btn-warning save" %>
				</div>

				<table class="table">
					<tr>
						<td> <%= form.label :code, "編號" %> </td>
						<td> <%= form.text_field :code, :required=>true %>  </td>
					</tr>
					<tr>
						<td> <%= form.label :name, "名稱" %> </td>
						<td> <%= form.text_field :name, :required=>true %> </td>
					</tr>
					<tr>
						<td> <%= form.label :status, "狀態" %> </td>
						<td> <%= form.select :status, [["在職"],["離職"]] %> </td>
					</tr>
					<tr>
						<td> <%= form.label :user_id, "使用者帳號" %> </td>
						<td> <%= form.select :user_id, 
											User.without_delivery_person.map{|u| [u.email,u.id]}, 
											:prompt => "無"%> 
						</td>
				</table>

			<% end %>
		</div>


	</div>
</div>


