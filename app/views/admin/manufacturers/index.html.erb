<div class="menu-box">
	<div class="menu-inner-1">
		<%= link_to "客戶", admin_customers_path,:class=>"" %>
		<%= link_to "送貨員",admin_delivery_people_path,:class=>"" %>
		<%= link_to "廠商", admin_manufacturers_path,:class=>"selected" %>
	</div>
</div>

<div class="content-box">
	<div class="content-inner">
	
		<table class="table table-striped manufacturer-index-table">
			<tr>
				<td width="20%"> 名字 </td>
				<td width="20%"> 描述 </td>
				<td width="10%"></td>
			</tr>

			<% @manufacturers.each do |manufacturer| %>
				<tr>
					<td> <%= manufacturer.name %> </td>
					<td> <%= manufacturer.phones.map{|p| p.number}.join(',') %> </td>
					<td> 
						<%= link_to "詳細內容",admin_manufacturer_path(manufacturer), :class=>"btn btn-primary" %>
					</td>
				</tr>
			<% end %>

		</table>


	</div> <%# content-inner %>
</div> <%# content-box %>

