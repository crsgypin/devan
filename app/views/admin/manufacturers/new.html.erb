<div class="menu-box">
	<div class="menu-inner-1">
		<%= link_to "客戶", admin_customers_path,:class=>"" %>
		<%= link_to "送貨員",admin_delivery_people_path,:class=>"" %>
		<%= link_to "廠商", admin_manufacturers_path,:class=>"selected" %>
	</div>
</div>

<div class="content-box">
	<div class="content-inner">
		<div class="admin-manufacturer">

			<%= form_for @manufacturer, :url=>admin_manufacturers_path do |form| %>
				<div class="info-box">
					<%= link_to "取消回清單", admin_manufacturers_path, :class=>"btn btn-default back"%>
					<p class="message"> 
						<%= flash[:success] %> 
						<%= flash[:fail] %>
					</p>					
					<%= form.submit "儲存並回清單", :class=>"btn btn-warning save" %>
				</div>

				<%= render :partial=>'admin/manufacturers/form', :locals=>{:form=>form, :cities=>@cities} %>
			<% end %>

		</div>
	</div> <%# content-inner %>
</div> <%# content-box %>

