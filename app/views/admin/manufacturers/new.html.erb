<%= render :partial=>"admin/header.html",:locals=>{:selected=>"manufacturer"} %>

<div class="content-box">
	<div class="content-inner">
		<div class="admin-manufacturer">

			<%= form_for @manufacturer, :url=>admin_manufacturers_path do |form| %>
				<div class="info-box">
					<%= link_to "取消回清單", admin_manufacturers_path, :class=>"btn btn-default back"%>
					<p class="message"> 
						<%= flash[:success] %> 
						<%= flash[:fail] %>
					</p>					
					<%= form.submit "儲存並回清單", :class=>"btn btn-warning save" %>
				</div>

				<%= render :partial=>'admin/manufacturers/form', :locals=>{:form=>form, :cities=>@cities} %>
			<% end %>

		</div>
	</div> <%# content-inner %>
</div> <%# content-box %>

